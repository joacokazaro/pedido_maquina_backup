generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/////////////////////////////////////////////////
// MODELOS
/////////////////////////////////////////////////

model Usuario {
  id        Int      @id @default(autoincrement())
  username  String   @unique

  nombre    String?
  password  String?
  rol       String   // supervisor | deposito | admin
  activo    Boolean  @default(true)

  pedidosSupervisor Pedido[]          @relation("SupervisorPedidos")
  historialAcciones HistorialPedido[]

  createdAt DateTime @default(now())
}

model Servicio {
  id        Int       @id @default(autoincrement())
  nombre    String    @unique

  maquinas  Maquina[]
  pedidos   Pedido[]

  createdAt DateTime @default(now())
}

model Maquina {
  id        String   @id
  tipo      String
  modelo    String
  serie     String?
  estado    String   @default("disponible")
  // disponible | asignada | no_devuelta | fuera_servicio | reparacion | baja

  servicioId Int
  servicio   Servicio @relation(fields: [servicioId], references: [id])

  asignaciones PedidoMaquina[]

  createdAt DateTime @default(now())
}

model Pedido {
  id          String   @id
  estado      String
  // PENDIENTE_PREPARACION | PREPARADO | ENTREGADO | PENDIENTE_CONFIRMACION | PENDIENTE_CONFIRMACION_FALTANTES | CERRADO

  observacion String?

  // Para mantener el front igual
  itemsSolicitados String
  itemsDevueltos   String?

  supervisorId Int
  supervisor   Usuario @relation("SupervisorPedidos", fields: [supervisorId], references: [id])

  servicioId Int
  servicio   Servicio @relation(fields: [servicioId], references: [id])

  asignadas PedidoMaquina[]
  historial HistorialPedido[]

  createdAt DateTime @default(now())
}

model PedidoMaquina {
  id         Int    @id @default(autoincrement())

  pedidoId   String
  maquinaId  String

  pedido     Pedido  @relation(fields: [pedidoId], references: [id])
  maquina    Maquina @relation(fields: [maquinaId], references: [id])

  @@unique([pedidoId, maquinaId])
}

model HistorialPedido {
  id        Int      @id @default(autoincrement())

  pedidoId  String
  pedido    Pedido   @relation(fields: [pedidoId], references: [id])

  accion    String
  detalle   String?

  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])

  fecha     DateTime @default(now())
}
